{% block javascript %}
  <link rel="stylesheet" href="{{ static_url("css/bjqs.css") }}" />
  <script type="text/javascript">
    $(document).ready(function() {
      rp_max_height = 0;
      $('.featured-post').each(function() {
        if ($(this).height() > rp_max_height) {
          rp_max_height = $(this).height();
        }
      })
      $('.featured-post').height(rp_max_height);
      $('#slideshow').bjqs({
        'height' : 225,
        'width' : 1060,
        'responsive' : true,
        'showcontrols' : false, 
        'automatic': true,
        'animspeed': 5000,
        'animduration' : 2000,
        'showmarkers': false
      });
    });
  </script>
  {% end %}
